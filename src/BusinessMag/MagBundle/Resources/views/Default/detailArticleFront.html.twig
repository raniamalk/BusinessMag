          <img src="https://image.noelshack.com/fichiers/2018/36/1/1535984052-1532345138-sans-titre-1.png" class="img-responsive" alt="logo-articles">
      </div>
    </div>

    <div class="menu col-lg-10 col-md-10 col-sm-12 col-xs-12">
      <div id="myCarousel" class="carousel slide" Align="center">

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active">
            <a class="nom-article" href="http://www.telecontact.ma/">Maisons</a>
            <a href="http://www.telecontact.ma/">Immobilier </a>
            <a href="http://www.telecontact.ma/">Santé </a>
            <a href="http://www.telecontact.ma/">Voyage </a>
            <a href="http://www.telecontact.ma/"> Auto-moto </a>
            <a href="http://www.telecontact.ma/">Emploi</a>
          </div>

          <div class="item">
            <a href="http://www.telecontact.ma/">Evénementiel</a>
            <a href="http://www.telecontact.ma/">Finance</a>
            <a href="http://www.telecontact.ma/">Bien-être</a>
            <a href="http://www.telecontact.ma/">Animaux</a>
            <a href="http://www.telecontact.ma/">Ecologie</a>
            <a href="http://www.telecontact.ma/">Business</a>
          </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="row" align="center">
      <div>{{article.titre|raw}}</div>
      <a href="#" class="lien-titre-article">{{article.theme.nom}}</a>
    </div>

  </div>
 </div>
</section>













<section class="article">

  <div class="container">
    <div class="row">

    <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 icones" align="center">
        <div class="for-reponsive">
          <a href="#texte-article" class="fa fa-share icones-principale" id="share"></a>
          <div id="social-media" style="">

            <a class="fa fa-facebook" href="https://www.facebook.com/sharer/sharer.php?u=http://www.telecontact.ma/services/meteo/casablanca-Maroc" target="_blank"></a>
           
        <a href="https://api.whatsapp.com/send?phone=whatsappphonenumber&text=http://www.telecontact.ma/services/meteo/casablanca-Maroc" class="fa fa-whatsapp" target="_blank"></a>

            
