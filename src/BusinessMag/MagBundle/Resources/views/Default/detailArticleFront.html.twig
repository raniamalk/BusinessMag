          <a href="{{path('generate_pdf',{'id':article.id})}}" target="_blank" class="fa fa-file icones-principale">
          </a>

          <a href="#" class="fa fa-clock-o icones-principale"></a>
        </div>
      </div>

      <div class="col-lg-8 col-md-8 col-sm8 col-xs-12 texte-article" id="texte-article">
        {{article.texteArticle|raw}}
        <div class="well commentaire">
          <h3>Laisser un commentaire</h3>
          <p>Votre adresse de messagerie ne sera pas publi&eacutee.</p>
          {{form_start(form,{'attr': {'class': 'form-horizontal'}})}}
          <div class="form-group">
            <div class="col-sm-12"> 
            {{form_widget(form.commentaire,{'attr': {'class': 'form-control','placeholder':'Commentaire','rows':'8'}})}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12"> 
            {{form_widget(form.nom,{'attr': {'class': 'form-control','placeholder':'Nom'}})}}
            </div>
          </div>

           <div class="form-group">
            <div class="col-sm-12"> 
            {{form_widget(form.email,{'attr': {'class': 'form-control','placeholder':'Email'}})}}
            </div>
          </div>
          <div class="" style="display: none;">
          
          {{form_widget(form.article,{'attr': {'class': 'form-control'}})}}
          </div>
          <button type="submit" class="btn btn-primary" >valider</button>
          {{form_end(form)}}

          <!--<input type="text" class="form-control" placeholder="Commentaire">
          <input type="text" class="form-control" placeholder="Nom">-->
         

        </div>

        {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
                
            {% endfor %}
      </div> 


      <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 selection-professionnels">
        <a href="https://www.telecontact.ma/" target="_blank">
