{% extends 'MagBundle::FormsBase.html.twig' %}
{% block title %} Historique Laisser un commentaire  {% endblock %}
{% block pagetitle %} <h3> Historique Laisser un commentaire </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"> Formulaire </li>
        <li class="breadcrumb-item">Laisser un commentaire</li>
        <li class="breadcrumb-item active"><a href="{{ path('laissercomment_list') }}">Historique</a></li>
    </ul>
{% endblock %}
{% block body %}

    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="table">
                        <thead>
                        <tr>
                            <th>Commentaire</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Date creation</th>
                            <th></th>
                            <th></th>

                        </tr>
                        </thead>
                        {% for c in comment %}
                            <tr>

                                <td>{{ c.commentaire | slice(0, 30)}}</td>
                                <td>{{ c.nom }}</td>
                                <td>{{ c.email }}</td>
                                <td>{{ c.createdAt | date("d/m/Y") }}</td>
                                <td><a href="{{ path('laissercomment_show', { 'id': c.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a></td>
                                <td><a href="{{ path('laissercomment_delete', { 'id': c.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>

                            </tr>
                        {% endfor %}

                    </table>
                </div>
            </div>
        </div>
    </div>



{% endblock %}



{% block javascript %}
    <script type="text/javascript">
        $(document).ready(function() {
            $('#table').dataTable( {
                "order": [[ 3, "desc" ]],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
                }
            });
        } );


    </script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js')}}"></script>
    <script src="{{ asset('vendor/jquery.cookie/jquery.cookie.js')}}"> </script>
    <script src="{{ asset('js/front.js')}}"></script>

{% endblock %}
