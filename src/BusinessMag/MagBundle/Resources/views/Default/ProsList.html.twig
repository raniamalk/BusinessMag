{% extends 'MagBundle::base.html.twig' %}
{% block title %} Liste Des Professionnels {% endblock %}
{% block body %}
    <h3>Liste Des Professionnels</h3>

        <table class="table table-bordered table-striped">
            <thead >
                <tr>
                    <th> Raison sociale </th>
                    <th> Telephone </th>
                    <th> Adresse </th>
                    <th> Lien </th>

                </tr>
            </thead>
            {% for p in pro %}

                <tr>

                    <td> {{ p.raisonSocial }} </td>
                    <td> {{ p.telephone }} </td>
                    <td> {{ p.adresse | slice(0, 20) ~ ' ...' }} </td>
                    <td> {{ p.lien | slice(11, 30) ~ ' ...' }} </td>
                    <td> <a href="{{ path('pro_edit', {'id': p.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> </td>

                    <td>

                        <a href="{{ path('pro_delete', { 'id': p.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </td>


                </tr>

            {% endfor %}

        </table>

{% endblock %}