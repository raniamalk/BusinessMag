{% extends 'MagBundle::base.html.twig' %}
{% block title %} Liste des articles publiés{% endblock %}

{% block body %}
    <h3>Liste des articles publiés</h3>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Fonction</th>
            <th>Telephone</th>
            <th>Email</th>
            <th>Raison sociale</th>
            <th>Site web</th>
            <th>Telephone</th>
            <th>Email</th>
            <th>Article</th>
            <th>Theme</th>
        </tr>
        </thead>
        {% for a in pub %}
            <tr>

                <td>{{ a.nom }}</td>
                <td>{{ a.fonction }}</td>
                <td>{{ a.telPerso }}</td>
                <td>{{ a.emailPerso }}</td>
                <td>{{ a.raisonSocial }}</td>
                <td>{{ a.siteWeb }}</td>
                <td>{{ a.telPro }}</td>
                <td>{{ a.emailPro }}</td>
                <td>{{ a.article | slice(0, 30) ~ ' ...' }}</td>
                <td>{{ a.theme.nom }}</td>
                <td><a href="{{ path('published_edit', { 'id': a.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                <td><a href="{{ path('published_delete', { 'id': a.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
            </tr>
        {% endfor %}

    </table>
{% endblock %}