{% extends 'MagBundle::base.html.twig' %}
{% block title %} Liste Des Rubriques {% endblock %}
{#{% block test %} show me this {% endblock %}#}
{% block body %}
    <h3> Liste des rubriques </h3>
    <div class="container">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Rubrique</th>
                    <th>Modification</th>
                    <th>suppression</th>
                </tr>
            </thead>
            {% for r in rubrique %}

                <tr>
                    <td> {{ r.nom }} </td>
                    <td> <a href="{{ path('rubrique_edit', {'id' : r.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> </td>

                    <td>

                        <a href="{{ path('rubrique_delete', { 'id': r.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </td>

                </tr>

            {% endfor %}
        </table>

        <td><a href="{{ path('rubrique_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a></td>

    </div>
{% endblock %}