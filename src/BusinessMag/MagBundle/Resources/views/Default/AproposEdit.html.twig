{% extends 'MagBundle::base.html.twig' %}
{% block title %} Modification du champ A propos  {% endblock %}
{% block pagetitle %} <h3> Modification du champ A propos  </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"> Footer </li>
        <li class="breadcrumb-item">A propos</li>
        <li class="breadcrumb-item active"><a href="{{ path('apropos_edit', {'id':ids}) }}">Modification</a></li>
    </ul>
{% endblock %}
{% block body %}


    <form action="{{ path('apropos_edit',{'id': ids }) }}" method="post" enctype="multipart/form-data" >
        {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
        {{ form_row(form._token) }}

        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal">


                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Qui sommes-nous </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.quiSommesNous, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div><div class="form-group row">
                            <label class="col-sm-3 form-control-label">Mentions l√©gales </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.mentionsLegales, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div><div class="form-group row">
                            <label class="col-sm-3 form-control-label">Champs CGV </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.champsCGV, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div><div class="form-group row">
                            <label class="col-sm-3 form-control-label">Champs CGU </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.champsCGU, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>



                        <div class="form-group row">
                            <div class="col-sm-4 offset-sm-3">
                                <button type="submit" class="btn ">Enregistrer</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </form>
{% endblock %}


{% block javascript %}

    <script>
        CKEDITOR.replace( 'businessmag_magbundle_apropos[quiSommesNous]' );
    </script>
    <script>
        CKEDITOR.replace( 'businessmag_magbundle_apropos[mentionsLegales]' );
    </script>
    <script>
        CKEDITOR.replace( 'businessmag_magbundle_apropos[champsCGV]' );
    </script>
    <script>
        CKEDITOR.replace( 'businessmag_magbundle_apropos[champsCGU]' );
    </script>

{% endblock %}