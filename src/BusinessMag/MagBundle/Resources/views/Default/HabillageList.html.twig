{% extends 'MagBundle::base.html.twig' %}
{% block title %} Liste  {% endblock %}
{% block body %}
    <h3>Liste </h3>
    <div class="container">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
            <tr>

                <th>Habillage</th>
                <th>theme</th>
                <th>lien</th>
                <th>Image</th>
            </tr>
            </thead>

            {% for t in habillage %}
                <tr>
                    <td><img src="{{ asset('upload3/' ~ t.Pathc)  }}"  width="80" height="80"></td>
                    <td> {{ t.Hab.hab }} </td>
                    <td> {{ t.Theme.nom}} </td>
                    <td> {{ t.lien }} </td>

                    <td> <a href="{{ path('habillage_edit', {'id' : t.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> </td>
                    <td><a href="{{ path('habillage_delete', { 'id': t.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                </tr>
            {% endfor %}

        </table>

        <td><a href="{{ path('habillage_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a></td>
    </div>



