{% extends 'MagBundle::FormsBase.html.twig' %}
{% block title %} Historique "Produits Display" {% endblock %}
{% block pagetitle %} <h3> Historique "Produits Display" </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">Insertion Web</li>
        <li class="breadcrumb-item">Produits Display</li>
        <li class="breadcrumb-item active"><a href="{{ path('habillage_list') }}">Historique</a></li>
    </ul>
{% endblock %}
{% block body %}



        <div class="col-lg-12">
            <div class="card">

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="table">
                            <thead >
                            <tr>
                                <th>Produit display</th>
                                <th>Thème</th>
                                <th>Code firme</th>
                                <th>Raison sociale</th>
                                <th>Lien</th>
                                <th>Image</th>
                                <th>Date creation</th>
                                <th>Date début</th>
                                <th>Date fin</th>
                                <th>Publié</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>

                            {% for t in habillage %}
                                <tr>

                                    <td> {{ t.type }} </td>
                                    <td> {{ t.Theme.nom}} </td>
                                    <td> {{ t.codeFirm }} </td>
                                    <td> {{ t.raisonSocial }} </td>
                                    <td> {{ t.lien }} </td>
                                    <td><img alt="pas d'image" src="{{ asset('upload/' ~ t.Pathc)  }}"  width="80" height="80"></td>
                                    <td>{{ t.createdAt | date("d/m/Y ") }}</td>
                                    <td>{{ t.dateDebut | date("d/m/Y ") }}</td>
                                    <td>{{ t.dateFin | date("d/m/Y ") }}</td>
                                    <td>{% if t.published =='on'%}<span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>{% else %}<span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>{%endif%}</td>
                                    <td> <a href="{{ path('habillage_edit', {'id' : t.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> </td>
                                    <td><a href="{{ path('habillage_delete', { 'id': t.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                                </tr>
                            {% endfor %}

                        </table>
                    </div>
                </div>
            </div>
        </div>
        <td><a href="{{ path('habillage_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a></td>
    </div>


{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        $(document).ready(function() {
            $('#table').dataTable( {
                "order": [[ 6, "desc" ]],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
                }
            });
        } );


    </script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js')}}"></script>
    <script src="{{ asset('vendor/jquery.cookie/jquery.cookie.js')}}"> </script>
    <script src="{{ asset('js/front.js')}}"></script>

{% endblock %}


