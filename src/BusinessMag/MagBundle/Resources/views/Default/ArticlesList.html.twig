{% extends 'MagBundle::base.html.twig' %}
{% block title %} Liste des Articles {% endblock %}

{% block body %}
    <h3>Liste des Articles</h3>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Theme</th>
                    <th>Titre</th>
                    <th>Texte d'intro</th>
                    <th>Texte de l'article</th>
                    <th>Image en vedette</th>
                    <th>Image d'intro</th>
                    <th>Image de l'article</th>
                    <th>Rubrique</th>
                    <th> </th>
                    <th> </th>
                </tr>
            </thead>
            {% for a in article %}
                <tr>
                    <td>{{ a.theme.nom }}</td>
                    <td>{{ a.titre |striptags | slice(0, 10) ~ ' ...'}}</td>
                    <td>{{ a.texteIntro |striptags | slice(0, 10) ~ ' ...' }}</td>
                    <td>{{ a.texteArticle |striptags | slice(0, 10) ~ ' ...' }}</td>
                    <td><img src="{{ asset('upload2/' ~ a.Pathb)  }}"  width="80" height="80"></td>
                    <td><img src="{{ asset('uploads/' ~ a.Path) }}"  width="80" height="80"></td>
                    <td><img src="{{ asset('upload/' ~ a.Patha) }}"  width="80" height="80"></td>
                    <td>
                        {% for rubrique in a.rubrique %}
                            {{ rubrique.nom }}
                        {% endfor %}
                    </td>
                    <td><a href="{{ path('contenu_edit', { 'id': a.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                    <td><a href="{{ path('contenu_delete', { 'id': a.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                </tr>
            {% endfor %}

        </table>
{% endblock %}