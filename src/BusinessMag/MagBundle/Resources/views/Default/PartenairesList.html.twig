{% extends 'MagBundle::FormsBase.html.twig' %}
{% block title %} Listing de nos partenaires {% endblock %}
{% block pagetitle %} <h3> Listing de nos partenaires </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">Footer</li>
        <li class="breadcrumb-item">Nos partenaires</li>
        <li class="breadcrumb-item active"><a href="{{ path('partenaires_list') }}">Listing</a></li>
    </ul>
{% endblock %}
{% block body %}



    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="table">
                        <thead >
                        <tr>
                            <th> Partenaire </th>
                            <th> Logo </th>
                            <th> lien </th>

                            <th></th>
                            <th></th>
                        </tr>
                        </thead>

                        {% for p in part %}
                            <tr>
                                <td> {{ p.partenaires }} </td>
                                <td><img alt="pas d'image" src="{{ asset('upload/' ~ p.Path)  }}"  width="80" height="80"></td>
                                <td> {{ p.siteWeb }} </td>
                                {#<td>{{ p.createdAt }}</td>#}
                                <td> <a href="{{ path('partenaires_edit', {'id' : p.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> </td>
                                <td><a href="{{ path('partenaires_delete', { 'id': p.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                            </tr>
                        {% endfor %}

                    </table>

                </div>
            </div>
        </div>
        <td><a href="{{ path('partenaires_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a></td>
    </div>

    </div>


{% endblock %}
{% block javascript %}
    <script type="text/javascript">
        $(document).ready(function() {
            $('#table').dataTable( {
                "order": [[ 0, "asc" ]],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
                }
            });
        } );


    </script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js')}}"></script>
    <script src="{{ asset('vendor/jquery.cookie/jquery.cookie.js')}}"> </script>
    <script src="{{ asset('js/front.js')}}"></script>

{% endblock %}


