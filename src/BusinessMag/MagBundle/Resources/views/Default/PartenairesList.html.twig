{% extends 'MagBundle::base.html.twig' %}
{% block title %} Liste des Partenanires {% endblock %}
{% block body %}
    <h3>Liste des Partenaires</h3>
    <div class="container">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th> Partenaires </th>
                    <th> Logo </th>
                    <th> siteWeb </th>

                    <th>Modification</th>
                    <th>suppression</th>
                </tr>
            </thead>

            {% for p in part %}
                <tr>
                    <td> {{ p.partenaires }} </td>
                    <td><img src="{{ asset('upload3/' ~ p.Path)  }}"  width="80" height="80"></td>
                    <td> {{ p.siteWeb }} </td>
                    <td> <a href="{{ path('partenaires_edit', {'id' : p.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> </td>
                    <td><a href="{{ path('partenaires_delete', { 'id': p.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                </tr>
            {% endfor %}

        </table>

        <td><a href="{{ path('partenaires_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a></td>
    </div>
{% endblock %}
