{% extends 'MagBundle::base.html.twig' %}
{% block title %} A propos du site Business Mag {% endblock %}
{% block body %}
    <h3>A propos du site Business Mag</h3>
    <div class="container">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th> Qui Sommes Nous </th>
                    <th> Mentions Legales </th>
                    <th> champs CGV </th>
                    <th> champsCGU </th>

                </tr>
            </thead>

            {% for a in apropos %}
                <tr>
                    <td> {{ a.quiSommesNous |striptags | slice(0, 10) ~ ' ...' }} </td>
                    <td> {{ a.mentionsLegales |striptags | slice(0, 10) ~ ' ...' }} </td>
                    <td> {{ a.champsCGV |striptags | slice(0, 10) ~ ' ...' }} </td>
                    <td> {{ a.champsCGU |striptags | slice(0, 10) ~ ' ...' }} </td>
                    <td> <a href="{{ path('apropos_edit', {'id' : a.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> </td>
                    {#<td><a href="{{ path('theme_delete', { 'id': t.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>#}
                </tr>
            {% endfor %}

        </table>

        {#<td><a href="{{ path('td_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a></td>#}
    </div>
{% endblock %}

