{% extends 'MagBundle::base.html.twig' %}
{% block title %} Liste des Themes {% endblock %}
{% block body %}
    <h3>Liste des Themes</h3>
    <div class="container">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
            <tr>
                <th> Nom </th>
                <th>Modification</th>
                <th>suppression</th>
            </tr>
            </thead>

            {% for t in theme %}
                <tr>
                    <td> {{ t.nom }} </td>
                    <td> <a href="{{ path('theme_edit', {'id' : t.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> </td>
                    <td><a href="{{ path('theme_delete', { 'id': t.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                </tr>
            {% endfor %}

        </table>

        <td><a href="{{ path('theme_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a></td>
    </div>



    <script type="text/javascript">
        $(document).ready(function() {
            $('.example').dataTable();
        } );

    </script>


{% endblock %}