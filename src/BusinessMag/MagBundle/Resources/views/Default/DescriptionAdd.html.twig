{% extends 'MagBundle::base.html.twig' %}
{% block title %} Texte Descriptif {% endblock %}
{% block pagetitle %} <h3> Texte Descriptif  </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"> Footer </li>
        <li class="breadcrumb-item">A propos</li>
        <li class="breadcrumb-item active"><a href="{{ path('td_edit', {'id':ids}) }}">Modification</a></li>
    </ul>
{% endblock %}
{% block body %}
        <div class="container">
            {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
            {{ form_row(form._token) }}

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form class="form-horizontal">


                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label"> Description </label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                                </div>
                            </div>



                            <div class="form-group row">
                                <div class="col-sm-4 offset-sm-3">
                                    <button type="submit" class="btn">Enregistrer</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}

{% block javascript %}

    <script>
        CKEDITOR.replace( 'businessmag_magbundle_textedescriptif[description]' );
    </script>

{% endblock %}






