{% extends 'MagBundle::base.html.twig' %}
{% block title %} Ajouter un thème {% endblock %}
{#{% block test %} show me this {% endblock %}#}
{% block pagetitle %} <h3> Ajouter un Thème </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">Footer</li>
        <li class="breadcrumb-item"> Thème </li>
        <li class="breadcrumb-item active"><a href="{{ path('theme_add') }}">Ajout</a></li>
    </ul>
{% endblock %}
{% block body %}


    <form action="{{ path('theme_add') }} " method="post" enctype="multipart/form-data" >
        {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
        {{ form_row(form._token) }}

        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal">


                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Thème </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>

                        <input type="text" id="ran" name="fname" style="display:none;" value="3">

                        <div class="form-group row">
                            <div class="col-sm-4 offset-sm-3">
                                <button type="submit" class="btn">Enregistrer</button>
                                <button type="submit" class="btn_info" id="add">Ajouter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </form>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script>

            $(document).on('click', '#add', function (event) {


            event.stopPropagation();
            $('#ran').val(5);
            $(this).trigger('click');

        });

        $('.checkbox').on('change', function() {
            $('.checkbox').not(this).prop('checked', false);
        });
    </script>
{% endblock %}
