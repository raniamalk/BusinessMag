{% extends 'MagBundle::FormsBase.html.twig' %}
{% block title %} Historique "Publier Article"  {% endblock %}
{% block pagetitle %} <h3> Historique "Publier Article" </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">Formulaire</li>
        <li class="breadcrumb-item">Publier Article</li>
        <li class="breadcrumb-item active"><a href="{{ path('publierarticle_list') }}">Historique</a></li>
    </ul>
{% endblock %}
{% block body %}

    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="table">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Fonction</th>
                           {# <th>Téléphone portable</th>
                            <th>Email</th>#}
                            <th>Raison sociale</th>
                           {# <th>Site web</th>
                            <th>Téléphone fixe</th>
                            <th>Email</th>#}
                            <th>Contenu</th>
                            <th>Thème</th>
                            <th>Date création</th>
                            <th> </th>
                            <th> </th>


                        </tr>
                        </thead>

                        {% for a in pub %}
                            <tr>

                                <td>{{ a.nom }}</td>
                                <td>{{ a.fonction }}</td>
                               {# <td>{{ a.telPerso }}</td>
                                <td>{{ a.emailPerso }}</td>#}
                                <td>{{ a.raisonSocial }}</td>
                                {#<td>{{ a.siteWeb }}</td>
                                <td>{{ a.telPro }}</td>
                                <td>{{ a.emailPro }}</td>#}
                                <td>{{ a.article | slice(0, 30) ~ ' ...' }}</td>
                                <td>{{ a.theme.nom }}</td>
                                <td>{{ a.createdAt | date("d/m/Y") }}</td>
                                <td><a href="{{ path('publierarticle_edit', { 'id': a.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                                <td><a href="{{ path('publierarticle_delete', { 'id': a.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                            </tr>
                        {% endfor %}

                    </table>
                </div>
            </div>
        </div>
    </div>

    </div>


{% endblock %}



{% block javascript %}
    <script type="text/javascript">
        $(document).ready(function() {
            $('#table').dataTable( {
                "order": [[ 5, "desc" ]],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
                }
            });
        } );


    </script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js')}}"></script>
    <script src="{{ asset('vendor/jquery.cookie/jquery.cookie.js')}}"> </script>
    <script src="{{ asset('js/front.js')}}"></script>
{% endblock %}

