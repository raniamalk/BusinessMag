{% extends 'MagBundle::base.html.twig' %}
{% block title %} Ajouter une rubrique {% endblock %}
{#{% block test %} show me this {% endblock %}#}
{% block pagetitle %} <h3> Ajouter une rubrique </h3> {% endblock %}
{% block body %}


    <form action="{{ path('rubrique_add') }} " method="post" enctype="multipart/form-data" >
        {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
        {{ form_row(form._token) }}

        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal">

                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Rubrique </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>



                        <div class="form-group row">
                            <div class="col-sm-4 offset-sm-3">
                                <button type="submit" class="btn ">Enregistrer</button>
                            </div>
                        </div>
                        {#<div class="form-group row">
                            <div class="col-sm-4 offset-sm-3">
                                <button class="btn btn-primary"><a href="{{ path('rubrique_delete') }}"></a></button>
                            </div>
                        </div>#}
                    </form>
                </div>
            </div>
        </div>

    </form>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script>
        $('.checkbox').on('change', function() {
            $('.checkbox').not(this).prop('checked', false);
        });
    </script>
{% endblock %}
