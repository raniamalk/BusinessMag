  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  <div class="form-group">
    <label class="control-label col-sm-4" for="nom" style="text-align:left;">Nom & Prénom</label>
    <div class="col-sm-8">
     {{form_widget(form.nom,{'label':'','id':'nom','attr': {'class':'form-control'}})}}
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-4" for="fonction" style="text-align:left;">Fonction</label>
    <div class="col-sm-8"> 
      {{form_widget(form.fonction, {'label':'','id':'fonction', 'attr': {'class':'form-control'}})}}
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-4" for="telPerso" style="text-align:left;">Téléphone</label>
    <div class="col-sm-8"> 
      {{form_widget(form.telPerso,{'label':'','id':'telPerso', 'attr': {'class':'form-control'}})}}
    </div>
  </div>
   <div class="form-group">
    <label class="control-label col-sm-4" for="emailPerso" style="text-align:left;">Email</label>
