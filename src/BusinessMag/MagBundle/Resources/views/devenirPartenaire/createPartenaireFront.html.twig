  </div>
   <div class="form-group">
    <label class="control-label col-sm-4" for="raisonSocial" style="text-align:left;">Raison Sociale</label>
    <div class="col-sm-8"> 
      {{form_widget(form.raisonSocial,{'label':'', 'id':'raisonSocial','attr': {'class':'form-control'}})}}
    </div>
  </div>
   <div class="form-group">
    <label class="control-label col-sm-4" for="siteWeb" style="text-align:left;">Site web</label>
    <div class="col-sm-8"> 
      {{form_widget(form.siteWeb,{'label':'','id':'siteWeb','attr': {'class':'form-control'}})}}
    </div>
  </div>
   <div class="form-group">
    <label class="control-label col-sm-4" for="telPro" style="text-align:left;">Téléphone</label>
    <div class="col-sm-8"> 
      {{form_widget(form.telPro,{'label':'','id':'telPro','attr': {'class':'form-control'}})}}
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-4" for="emailPro" style="text-align:left;">Email</label>
    <div class="col-sm-8"> 
      {{form_widget(form.emailPro,{'label':'','id':'emailPro', 'attr': {'class':'form-control'}})}}
