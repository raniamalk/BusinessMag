  </div>
  <div class="form-group">
    <label class="control-label col-sm-4" for="proposition" style="text-align:left;">
    Détail de votre proposition</label>
   <div class="col-sm-8"> 
      {{form_widget(form.proposition,{'label':'','id':'proposition','attr': {'class':'form-control','rows':'12'}})}}
    </div>
  </div> 
    <div class="custom-file-upload">
    <label class="custom-file-upload col-sm-4" for="file-upload" style="text-align:left;">
    Votre document ou plaquette</label>
   <div class="col-sm-8"> 
      {{form_widget(form.file,{'label':'','id':'file','attr': {'class':'form-control'}})}}
    </div>
  </div> 
